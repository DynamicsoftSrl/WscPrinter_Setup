@{
    var routeUrl = ViewContext.RouteData.Values["Page"].ToString();
    if (routeUrl.Contains("Step"))
    {
        Layout = "_Layout_Steps";
    }
    else if (routeUrl.Contains("TemplatePreview"))
    {
      Layout = "_Layout_Preview";
    }
    else
    {
        Layout = "_Layout";
    }
}

@page
@model WscPrinter_Setup.Pages.WscBuilder.Step08_ready_to_go.Step08ReadyToGoModel
@{


  string templateName = Request.Query["templateName"];
  string templateId = Request.Query["templateId"];
  string templateLink = Request.Query["theLink"];
  string templateImg = Request.Query["imgLink"];

}


<style>
  .withbord {
    border: 2px solid;
  }

  .inner {
    background-color: rgb(255, 255, 255);
    height: auto;
    position: relative;
    overflow: hidden;
    border: 2px solid #ECECEC;
    margin-bottom: 30px;
  }

  .image-box {
    position: relative;
    height: auto;
    width: 100%;
    padding-right: 0px;
    padding-left: 0px;
    background-position: center;
    background-color: #4D4E56;
    padding-bottom: 40px;
    background-repeat: no-repeat;
    background-size: cover;
    float: left;
  }
  /* other solution*/
  .inner2 {
    background-image: url('@templateImg');
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;
    height: 0;
    padding-top: 66.64%; /* (img-height / img-width * container-width) */
    /* (853 / 1280 * 100) */
  }
</style>

<h1>Step 8</h1>

<p>@Localizer["So this is your preferred one"]</p>

<div class="inner2 withbord">
</div>
<button onclick="leave();">@Localizer["Goto your website"]</button>
<p>@Localizer["We will contact you soon..."]</p>



<script>
  function leave() {
    var url = '@templateLink';
    window.open(url, '_blank');
  }
</script>

@model WscPrinter_Setup.Pages.WscBuilder.Step04_reference_websites.Step04ReferenceWebsitesModel
@{
  List<SelectListItem> siteItems = new List<SelectListItem> {
      new SelectListItem { Value = "DSN", Text = "disnei" }
      , new SelectListItem { Value = "NYT", Text = "niu iorc taims"  }
      , new SelectListItem { Value = "CDS", Text = "goppiere della serra"  }
      , new SelectListItem { Value = "IMN", Text = "Ilma tino dina"  }
  };
}

<h1>Step 4</h1>
<p>@Localizer["Your preferred websites"]</p>

<div>
  <form id="selectReferenceWebsites" asp-page="/WscBuilder/Step05_website_name_email_and_logo/Index"
        method="post" class="form-horizontal" role="form">
    <label>@Localizer["preferred websites:"]</label>
    <select name="ReferenceWebsite" on-change="this.form.submit()" asp-items="siteItems"></select>
    <button class="btn btn-secondary" type="submit">@Localizer["Confirm"]</button>
  </form>
</div>




